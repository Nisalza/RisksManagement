<UserControl x:Class="RisksManagementClient.UI.Views.RiskShortInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RisksManagementClient.UI.Views">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Name="Labels" Width="1*"/>
            <ColumnDefinition Name="Data" Width="2*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Right" Orientation="Horizontal">
            <Button Name="ShowButton" Content="Открыть" Margin="0,0,5,0"/>
            <Button Name="DuplicateButton" Content="Дублировать" Margin="0,0,5,0"/>
            <Button Name="EditButton" Content="Редактировать" Margin="0,0,5,0"/>
            <Button Name="DeleteButton" Content="Удалить"/>
        </StackPanel>

        <Label Grid.Row="1" Grid.Column="0">Номер</Label>
        <TextBox Name="RiskId" Grid.Row="1" Grid.Column="1" IsReadOnly="True" Text="{Binding CurrentRisk.Id}"/>

        <Label Grid.Row="2" Grid.Column="0">Наименование</Label>
        <TextBox Name="RiskName" Grid.Row="2" Grid.Column="1" IsReadOnly="True" Text="{Binding CurrentRisk.Name}"/>

        <Label Grid.Row="3" Grid.Column="0">Описание</Label>
        <TextBox Name="RiskDescription" Grid.Row="3" Grid.Column="1" IsReadOnly="True" MaxWidth="{Binding ElementName=Data, Path=Width}" Height="Auto" TextWrapping="Wrap"/>

        <Label Grid.Row="4" Grid.Column="0">Проект</Label>
        <TextBox Name="RiskProject" Grid.Row="4" Grid.Column="1" IsReadOnly="True" Text="{Binding CurrentRisk.Project.Name}"/>

        <Label Grid.Row="5" Grid.Column="0">Ответственный</Label>
        <TextBox Name="RiskResponsiblePerson" Grid.Row="5" Grid.Column="1" IsReadOnly="True" Text="{Binding CurrentRisk.ResponsiblePerson.Name}"/>

        <Label Grid.Row="6" Grid.Column="0">Величина</Label>
        <TextBox Name="RiskValue" Grid.Row="6" Grid.Column="1" IsReadOnly="True" Text="{Binding CurrentRisk.Value}"/>
    </Grid>
</UserControl>
